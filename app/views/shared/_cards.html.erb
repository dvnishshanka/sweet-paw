
<h2 class='section-headline'>Check out our Pets:</h2>

    <div class="cards">

      <% @pets.each do |pet| %>
        <div class="card-product">

          <div class="card-image" >
            <% if pet.photo.key%>
              <%= cl_image_tag pet.photo.key, crop: "fill" %>
            <% else %>
              <% if pet.species == "dog" %>
                  <%= image_tag("dog.png")%>

              <% elsif pet.species == "monkey" %>
              <%= image_tag("monkey.png")%>

              <% elsif pet.species == "cat" %>
              <%= image_tag("cat.png")%>

              <% elsif pet.species == "piglet" %>
              <%= image_tag("piglet.png")%>

              <% elsif pet.species == "rabbit" %>
              <%= image_tag("https://images.unsplash.com/photo-1591382386627-349b692688ff?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80")%>

              <% end %>
            <% end %>
          </div>

          <div class="card-product-infos">
            <p class="info-name"><%= pet.name %></p>
            <p><%= pet.species.capitalize %></p>
             <p>Personality: <%= pet.category.capitalize %></p>

            <p>Age: <%= pet.age %></p>
            <p>Owner: <%= pet.user.first_name || pet.user.email %></p>
            <p><%= link_to 'Learn More', pet_path(pet), class:"mb-3" %></p>

          </div>


        </div>
      <% end %>

    </div>
