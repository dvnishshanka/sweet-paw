<div class="container box-show ">
<h1 style="text-align:center">Allow me to introduce you to <%= @pet.name %></h1>
  <div class="row mt-5 d-flex">

      <div class="new-wrapper-pet-show ">
        <% if @pet.photo.key%>
                <%= cl_image_tag @pet.photo.key, height: 300, width: 400, c: :crop, g: :auto %>
              <% else %>
                <div class="card-product-show ">
                  <div class="card-image-show">
                    <div class="card-product img">
                      <% if @pet.species == "dog" %>
                      <%= image_tag ("dog.png")%>
                      <% elsif @pet.species == "monkey" %>
                      <%= image_tag("monkey.png")%>

                      <% elsif @pet.species == "cat" %>
                      <%= image_tag("cat.png")%>

                      <% elsif @pet.species == "piglet" %>
                      <%= image_tag("piglet.png")%>

                      <% elsif @pet.species == "rabbit" %>
                      <%= image_tag("rabbit.png")%>
                       <% end %>
                    </div>
                  </div>

                </div>

        <% end %>
      </div>

  <div class="pet-image-show">
    <div class="row mt-4">
      <h3>Address: <%= @pet.address %></h3>
      <h3>Species: <%= @pet.species.capitalize %></h3>
      <h3>Age: <%= @pet.age %></h3>
      </div>
      <div class="pet-info-show">
            <h3>A little information about <%= @pet.name %> </h3>
            <h3><%= @pet.description %>ðŸŒˆ</h3>
            <br/>
            <br/>
            <%= link_to "Return to home", root_path, class: "btn-return" %>
            <%= link_to "Book this Pet", new_pet_booking_path(@pet), class: "btn-book-pet" %>
        </div>
    </div>
  </div>
</div>
</div>
