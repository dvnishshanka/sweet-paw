<div class="container mb-4 mt-0 p-5" style="background-color: white; color: black; width: 800px; ">
  <%= simple_form_for(@pet) do |f| %>
    <%= f.input :name %>
    <%= f.input :age %>
    <%= f.input :species %>
    <%= f.input :category %>
    <%= f.input :description %>
    <%= f.input :address %>
      <%= f.input :price %>
    <%= f.input :city %>
    <%= f.input :photo, as: :file %>
      <div class="form-actions-add-pet">
    <%= f.button :submit, "Add Pet", class:"btn-add-pet" %>
  </div>
  <% end %>

</div>
