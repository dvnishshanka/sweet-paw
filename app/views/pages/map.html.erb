
<div class="container">
  <h3 class="text-center" style="color:black;" >Find a pet from the map!</h3>
    <div data-controller="map"
            id="map"
            class="map-sweet m-3"
            data-map-target="map"
            data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
            data-map-markers-value="<%=  @markers.to_json %>"
            style="width: 100%; height: 80vh; margin: 20px;">
    </div>
  <%= link_to pets_path do%>
    <button button class="btn-login position-fixed" style=" Z-index: 2; bottom: 100px; right:700px;"><i class="fa-solid fa-list"></i> List</button>
  <% end %>
</div>
