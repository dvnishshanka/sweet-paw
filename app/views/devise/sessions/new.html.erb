<div class="container mb-4 mt-0 p-0" style="background-color: white; color: black; width: 800px; height: 450px;">
<div class= "d-flex justify-content-between p-0 m-0">
  <div style = "background-image: url(https://images.unsplash.com/photo-1415369629372-26f2fe60c467?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80); width: 400px; height:450px;  background-size: cover;"></div>
<div class="p-5  mt-0" style="width: 400px;">
<h2>Log in</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
  <div class="form-inputs">

    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions" >
    <%= f.button :submit, "Log in", class:"btn-login" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
</div>
</div>


</div>
