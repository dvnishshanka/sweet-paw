


<div class="container">
<div class="form-control" style="background-color:white;border: none">
        <h2>Book a date with <br><%= @pet.name %> ?</h2>
        <%= simple_form_for [@pet, @booking], html: {style: "background-color: white; border: none"} do |f| %>
          <%= f.input :start_date, required: false, input_html: {class: "datepicker"} %>
           <%= f.input :end_date, required: false, input_html: {class: "datepicker"} %>
          <%= f.submit class: "btn-green" %>
        <% end %>
        </div>
      </div>
